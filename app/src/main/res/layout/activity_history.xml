<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    tools:context=".activities.HistoryActivity">

    <!-- Toolbar now uses theme colors for consistency -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="📊 Transaction History"
        app:titleTextColor="?attr/colorOnPrimary"
        android:elevation="4dp" />

    <!-- Stats Card now uses theme surface and text colors -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_total_transactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: 0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transactions"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.7"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Button now uses our semantic red color from colors.xml -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🗑️ Clear All"
                android:textColor="@color/transaction_debit"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/transaction_debit"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_transactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_transaction"/>

    <!-- Empty State now uses theme colors -->
    <LinearLayout
        android:id="@+id/empty_state_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📭"
            android:textSize="48sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No transactions found"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your payment history will appear here"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:alpha="0.6"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout>